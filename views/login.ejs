<!doctype html>
<html>

<head>
    <title>Node Authentication</title>
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/bootstrap/3.0.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="//netdna.bootstrapcdn.com/font-awesome/4.0.3/css/font-awesome.min.css">
    <style>
        body {
            padding-top: 80px;
        }
    </style>
</head>

<body>
    <div class="container">
            <nav class="navbar navbar-default navbar-fixed-top">
                    <div class="container">
                            <div class="navbar-header">
                                    <a class="navbar-brand" href="#">
                                      <img alt="Brand" src="static/image/logo.png" height="50px">
                                    </a>
                                  </div>
                                  <div align="right">
                                        <a href="/login" ><button type="button" class="btn btn-primary navbar-btn" style="margin-top: 30px;"><span class="fa fa-user"></span> Sign In</button></a>
                                        <a href="/signup" ><button type="button" class="btn btn-danger navbar-btn" style="margin-top: 30px;"><span class="fa fa-user"></span> Sign Up</button></a>
                                  </div>
                    </div>
            </nav>
            <div class="col-xs-12" style="height:50px;"></div>
            <div class="col-sm-6 col-sm-offset-3">
                    <div class="panel panel-default">
                        <div class="panel-heading">
                            <h3><span class="fa fa-sign-in"></span> LogIn</h3>
                            
                        </div>
                        <div class="panel-body">
                            <% if (message.length > 0) { %>
                                <div class="alert alert-danger">
                                    <%= message %>
                                </div>
                            <% } %>
                            <!-- LOGIN FORM -->
                            <form action="/login" method="post">
                                <div class="form-group">
                                    <label>Email</label>
                                    <input type="text" class="form-control" name="email">
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control" name="password">
                                </div>
                                <button type="submit" class="btn btn-warning ">Login</button>
                            </form>
                        </div>
                        <hr>
                        <div class="panel-body">
                            <p align=center>
                                <a href="/auth/facebook" class="btn btn-primary">
                                    <span class="fa fa-facebook"></span> Facebook</a>
                                <a href="/auth/twitter" class="btn btn-info">
                                    <span class="fa fa-twitter"></span> Twitter</a>
                                <a href="/auth/google" class="btn btn-danger">
                                    <span class="fa fa-google-plus"></span> Google+</a>
                            </p> </div>
                        <div class="panel-footer">
                            <p>Need an account?
                                <a href="/signup">Signup</a> Or go
                                <a href="/">home</a>.</p>
                        </div>
                    </div>
                    <div>
                    </div>
        </div>
    </div>
</body>
</html>